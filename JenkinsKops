
pipeline {
    agent any
    environment {
        my_stage = ''
    }

    stages {
        
        stage('KOPS deploy stage') {
            my_stage = 'KOPS'
            environment {
                AWS_BIN = '/usr/local/bin/aws'
            }
            steps {
                 
		  
                  withCredentials([[ 
                       $class: 'AmazonWebServicesCredentialsBinding',
                       credentialsId: 'aws-key',
                       accessKeyVariable: 'AWS_ACCESS_KEY_ID',
                       secretKeyVariable: 'AWS_SECRET_ACCESS_KEY'
                   ]]) {
                        sh './kops/kops.sh' 
                 }
		 
                 echo 'Hello Kops'
                  
               

            }
        }

        stage('Input') {
            steps {
                input('Do you want to proceed to build Terraform?')
            }
        }

        stage('If Proceed is clicked') {
            my_stage = 'TERRAFORM'
            steps {
                print('Terraform')
 
                // Permission to execute
                // sh "chmod +x -R ${env.WORKSPACE}/../${env.JOB_NAME}@script"
                // Call SH
                // sh "${env.WORKSPACE}/../${env.JOB_NAME}@script/script.sh"

                //env.WORKSPACE = pwd()
                  
                withCredentials([[ 
                       $class: 'AmazonWebServicesCredentialsBinding',
                       credentialsId: 'aws-key',
                       accessKeyVariable: 'AWS_ACCESS_KEY_ID',
                       secretKeyVariable: 'AWS_SECRET_ACCESS_KEY'
                ]]) {
                       sh " sed -i 's/0-0-0-0--0/aws-0-0-0-0--0/g' /kops/azuka_helm_terraform/kubernetes.tf "
                       sh 'cd /kops/azuka_helm_terraform/'
                       sh 'terraform upgrade:.012'
                       sh 'terraform init'
                       sh 'terraform apply -auto-approve'
                       sh 'cd ..'
                       sh 'cd ..'
                }
            }
        }
       
    }
    post {
        
           failure {

                //Check for the boolean condition 
                if (${my_stage}=='KOPS') { 
                     withCredentials([[ 
                         $class: 'AmazonWebServicesCredentialsBinding',
                         credentialsId: 'aws-key',
                         accessKeyVariable: 'AWS_ACCESS_KEY_ID',
                         secretKeyVariable: 'AWS_SECRET_ACCESS_KEY'
                    ]]) {
                        sh './kops/delete-kops.sh' 
                    }
                } else { 
          
                } 
               
           }
         
     }

}
